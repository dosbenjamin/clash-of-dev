---
import Container from '@components/container.astro';
import Marquee from '@components/marquee.astro';
import Sprite from '@components/sprite.astro';
import TagIcon from '@components/tag-icon.astro';
import Text from '@components/text.astro';
import BaseLayout from '@layouts/base.astro';
---

<BaseLayout title="Accueil">
  <header>
    <Container>
      <Text as="h1" size="lg" weight="semibold">
        Que le plus fort,
        <span>
          <TagIcon class="tag" colorScheme="purple" />
          <span class="flash-badge">
            <Sprite type="inline" icon="flash" />
            <Sprite type="inline" icon="badge" />
          </span>
        </span>
        <em>lâ€™emporte!</em>
      </Text>
    </Container>

    <Marquee />
  </header>

  <section>
    <article>

    </article>
  </section>
</BaseLayout>

<style>
  header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    height: 100vh;
  }

  header::before {
    content: '';
  }

  h1 {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    column-gap: 0.25em;

    margin-top: 1em;

    max-width: 8em;
  }

  h1 > span {
    display: inline-flex;
    align-items: flex-end;
  }

  em {
    font-style: italic;
  }

  .tag {
    width: 0.75em;
  }

  .flash-badge {
    display: grid;
    place-items: center;

    aspect-ratio: 1;
    width: 0.45em;

    margin-left: -0.2em;
  }

  .flash-badge svg {
    grid-area: 1 / 1;
  }

  .flash-badge svg:first-child {
    z-index: 1;

    color: var(--color-green-light);

    aspect-ratio: 5 / 9;
    width: 30%;
  }

  .flash-badge svg:last-child {
    color: var(--color-pink-middle);

    aspect-ratio: 1;
  }
</style>
